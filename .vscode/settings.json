{
  "cSpell.words": ["adipisicing", "Kanban"],
  "path-intellisense.mappings": {
    "@/": "${workspaceFolder}"
  },
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "eslint.validate": [
    "javascript",
    "svelte",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never",
      "source.fixAll": "always",
      "source.fixAll.eslint": "always"
    }
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always" // Enable automatic import sorting on save for all file types
  }
}
